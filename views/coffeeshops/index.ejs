<% layout("layouts/boilerplate")%>
<div id="map-cluster" class="d-none d-md-block">
  <div id="map"></div>
</div>

<h1>All Coffeeshops</h1>
<div>
  <a href="/coffeeshops/new">Add a new coffeeshop</a>
</div>
<% for( let cafe of cafes) { %>
<div class="card mb-3">
  <div class="row">
    <div class="col-md-4">
      <img class="img-fluid" src="<%= cafe.images[0].preview %>" alt="" />
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= cafe.title %></h5>
        <p class="card-text"><%=cafe.description %></p>
        <p class="card-text">
          <small class="text-muted"> <%=cafe.location %> </small>
        </p>
        <a href="/coffeeshops/<%= cafe._id %> " class="btn btn-primary"
          >Learn more</a
        >
      </div>
    </div>
  </div>
</div>
<% } %>

<script>
  const mapToken = '<%- process.env.MAPBOX_TOKEN %>';
  const cafes = { features: <%- JSON.stringify(cafes) %>}
</script>

<script src="/js/clusterMap.js"></script>
