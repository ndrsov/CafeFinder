<% layout("layouts/boilerplate")%>
<div id="map-cluster" class="d-none d-md-block">
  <div id="map"></div>
</div>

<div class="my-3 d-flex align-items-center">
  <h2 class="me-3">All Coffeeshops</h2>
  <a class="btn btn-warning text-white fw-bold" href="/coffeeshops/new"
    >Add new caf√©</a
  >
</div>

<% for( let cafe of cafes.docs) { %>
<div class="card mb-3">
  <div class="row">
    <div class="col-md-4">
      <img class="img-fluid" src="<%= cafe.images[0].preview %>" alt="" />
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= cafe.title %></h5>
        <p class="card-text"><%=cafe.description %></p>
        <p class="card-text">
          <small class="text-muted"> <%=cafe.location %> </small>
        </p>
        <a
          href="/coffeeshops/<%= cafe._id %> "
          class="btn btn-warning btn-sm text-white"
          >Learn more</a
        >
      </div>
    </div>
  </div>
</div>
<% } %>

<div class="my-4 d-flex justify-content-center">
  <%- include('../partials/paginate') %>
</div>

