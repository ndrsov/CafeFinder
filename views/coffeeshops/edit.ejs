<% layout("layouts/boilerplate")%>
<div class="row">
  <h1 class="text-center">Edit caf√©</h1>
  <div class="col-6 offset-3">
    <form
      action="/coffeeshops/<%=cafe._id%>?_method=PUT"
      method="post"
      novalidate
      class="validated-form"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="cafe[title]"
          value="<%= cafe.title %>"
          required
        />
        <div class="invalid-feedback">You can't leave this space blank</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          id="location"
          name="cafe[location]"
          value="<%= cafe.location %>"
          required
        />
        <div class="invalid-feedback">You can't leave this space blank</div>
      </div>
      <div class="mb-3">
        <label for="addImages" class="form-label">Add more images</label>
        <input
          class="form-control"
          type="file"
          id="addImages"
          name="image"
          multiple
        />
      </div>
      <div class="mb-3">
        <label for="avgprice" class="form-label"
          >Average cup of coffee price:</label
        >
        <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input
            type="number"
            class="form-control"
            placeholder="0.00"
            aria-label="avgprice"
            aria-describedby="price-label"
            name="cafe[avgprice]"
            id="avgprice"
            value="<%= cafe.avgprice %>"
            required
          />
          <div class="invalid-feedback">You can't leave this space blank</div>
        </div>
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Describe this place</label>
        <textarea
          class="form-control"
          id="description"
          name="cafe[description]"
          required
        >
<%= cafe.description %></textarea
        >
        <div class="invalid-feedback">You can't leave this space blank</div>
      </div>
      <div class="mb-3">
        <% cafe.images.forEach((img, i) => { %>
        <img src="<%= img.url %>" class="img-thumbnail" alt="" />
        <div class="form-check form-check-inline">
          <input
            class="form-check-input"
            type="checkbox"
            id="image-<%=i%>"
            name="deleteImages[]"
            value="<%= img.filename %>"
          />
          <label class="form-check-label" for="image-<%=i%>">Delete?</label>
        </div>
        <% }) %>
      </div>
      <div class="mb-3">
        <button class="btn btn-info">Save changes</button>
      </div>
    </form>
    <a href="/coffeeshops">Go back</a>
  </div>
</div>
