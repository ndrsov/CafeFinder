<% layout("layouts/boilerplate")%>
<h1>Edit coffeeshop</h1>
<form action="/coffeeshops/<%=cafe._id%>?_method=PUT" method="post">
  <div>
    <label for="title">Title</label>
    <input
      type="text"
      id="title"
      name="cafe[title]"
      value="<%= cafe.title %>"
    />
  </div>
  <div>
    <label for="location">Location</label>
    <input
      type="text"
      id="location"
      name="cafe[location]"
      value="<%= cafe.location %>"
    />
  </div>
  <button>Update coffeeshop</button>
</form>
<footer>
  <a href="/coffeeshops/<%= cafe._id %> ">Go back</a>
</footer>
